function draw_ship()
	-- spr(ship_flm_spr,ship_x,ship_y + 7)
	spr(ship_spr,ship_x,ship_y);
end

function draw_stars()
	for i=1,#stars do
		pset(stars[i]["x"],stars[i]["y"],stars[i]["c"]);
	end	
end

function draw_bullets()
	for i=1,#bullets do
		bullet = bullets[i];
		spr(21,bullet["x"],bullet["y"]);
	end
end

