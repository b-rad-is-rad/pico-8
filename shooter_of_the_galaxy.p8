-- init functions
function init_stars()
	-- stars: {x, y, dy, color}[]
	local stars = {};
	local MAX_STAR_SPEED = 5;

	for i=1,120 do
		local dy = rnd(MAX_STAR_SPEED - 1) + 1;
		local color = 7;

		if dy < 1.5 then
			color = 2;
		elseif dy < 3 then
			color = 5;
		end

		stars[i] = {["x"]=rnd_int(128),["y"]=rnd_int(128),["dy"]=dy, ["c"]=color};
	end

	return stars
end
