-- main
FIRE_SPEED = 8;
BULLET_SPEED = 8;

function _init()
	stars = init_stars();
	bullets = {};
	ship_x = 64;
	ship_y = 100;
	ship_flm_spr = 32;
	shoot_wait_timer = 0;
	can_shoot = true;
end

